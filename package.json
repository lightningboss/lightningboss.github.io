{
  "name": "lightningboss.github.io",
  "version": "0.0.1",
  "description": "Private webpage of Marc Nitzsche (marcnitzsche.de / lightningboss.github.io)",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch:all",
    "clean": "rm -f css/*",
    "autoprefixer": "postcss -u autoprefixer -r css/*",
    "scss": "node-sass --output-style compressed -o css scss",
    "lint": "eslint js/*",
    "serve": "browser-sync start --server --files 'css/*.css, js/*.js, **/*.html, !node_modules/**/*.html'",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint",
    "build:all": "npm run build:css && npm run build:js",
    "watch:css": "onchange 'scss/**/*' -- npm run build:css",
    "watch:js": "onchange 'js/**/*.js' -- npm run build:js",
    "watch:all": "npm-run-all -p serve watch:css watch:js",
    "postinstall": "npm run build:all && npm run watch:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightningboss/lightningboss.github.io.git"
  },
  "author": "Marc Nitzsche",
  "bugs": {
    "url": "https://github.com/lightningboss/lightningboss.github.io/issues"
  },
  "homepage": "https://github.com/lightningboss/lightningboss.github.io#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "browser-sync": "^2.11.1",
    "eslint": "^1.10.3",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-standard": "^1.3.1",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.5.1",
    "onchange": "^2.0.0",
    "postcss-cli": "^2.4.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.6.1",
    "uglify-js": "^2.6.1"
  }
}
